# Test Environment Variables
# Copy this file to .env.test (it will be used automatically during test runs)

# Database URL for testing (uses separate PostgreSQL test database)
# IMPORTANT: PostgreSQL must be running before tests (docker compose up postgres -d)
# The test database is created automatically by the init script in docker/postgres/
DATABASE_URL="postgresql://shader_user:shader_password@localhost:5432/shader_playground_test"

# JWT Secret for testing (can be a simple test value)
JWT_SECRET="test-secret-key-for-testing-only"

# Google OAuth (can use dummy values for most tests)
GOOGLE_CLIENT_ID="test-google-client-id"

# Node environment (automatically set to 'test' by test setup)
NODE_ENV="test"
