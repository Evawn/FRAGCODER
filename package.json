{
  "name": "shader-playground",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:start": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "kill-ports": "node scripts/kill-ports.js",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "test:run": "npm run test:run:backend && npm run test:run:frontend",
    "test:run:backend": "cd backend && npm run test:run",
    "test:run:frontend": "cd frontend && npm run test:run",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "cd backend && npm run test:coverage",
    "test:coverage:frontend": "cd frontend && npm run test:coverage"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "tree-kill": "^1.2.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "typescript": "^5.9.2"
  }
}
